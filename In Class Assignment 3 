        "#Inputs from user\n",
        "num1 = float(input(\"Enter the first number: \"))\n",
        "num2 = float(input(\"Enter the second number: \"))\n",
        "operation = input(\"Enter the operation (+, -, *, /,**,//,%): \")\n",
        "\n",
        "#Operation from inputs\n",
        "if operation == \"+\":\n",
        "  result = num1 + num2\n",
        "elif operation == \"-\":\n",
        "  result = num1 - num2\n",
        "elif operation == \"*\":\n",
        "  result = num1 * num2\n",
        "elif operation == \"/\":\n",
        "  if num2 == 0:\n",
        "    print(\"Cannot divide by zero\")\n",
        "    result = \"---\"\n",
        "  else:\n",
        "    result = num1 / num2\n",
        "elif operation == \"**\":\n",
        "  result = num1 ** num2\n",
        "elif operation == \"//\":\n",
        "  if num2 == 0:\n",
        "    print(\"Cannot divide by zero\")\n",
        "    result = \"---\"\n",
        "  else:\n",
        "    result = num1 // num2\n",
        "elif operation == \"%\":\n",
        "  result = num1 % num2\n",
        "else:\n",
        "  print(\"Invalid operation\")\n",
        "\n",
        "#Print Result\n",
        "print(\"Result:\", result)"
